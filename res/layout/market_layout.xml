<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff2399a3">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/market_swiper">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffffff">
            <ImageView
                android:id="@+id/gold_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/market_gold"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/textView_market_money"
                android:layout_toLeftOf="@id/gold_imageView"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="200"
                android:layout_marginRight="3dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imageView_user_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user_head"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"/>
            <TextView
                android:id="@+id/textView_market_nickname"
                android:layout_width="wrap_content"
                android:text="我的昵称"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView"
                android:layout_alignLeft="@+id/textView_market_Lv"/>
            <TextView
                android:layout_toLeftOf="@id/textView_market_money"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:text="金币"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv."
                android:id="@+id/textView_market_Lv"
                android:layout_marginLeft="18dp" android:layout_alignBaseline="@+id/textView_market_level"
                android:layout_alignBottom="@+id/textView_market_level"
                android:layout_toRightOf="@+id/imageView_user_head"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/textView_market_level"
                android:layout_centerVertical="true" android:layout_toRightOf="@+id/textView_market_Lv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/textView_market_experience"
                android:layout_alignTop="@+id/textView_market_Lv_" android:layout_toRightOf="@+id/textView_market_Lv_"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经验升级"
                android:layout_alignTop="@+id/textView_market_experience"
                android:layout_toRightOf="@+id/textView_market_experience"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差"
                android:id="@+id/textView_market_Lv_"
                android:layout_below="@+id/textView_market_Lv"
                android:layout_alignLeft="@+id/textView_market_Lv"/>

        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="商品"
                android:textSize="20sp"
                android:textColor="#ffffffff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="位置"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="价格"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                />
        </LinearLayout>


            <FrameLayout

                android:id="@+id/goods_Fragment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>